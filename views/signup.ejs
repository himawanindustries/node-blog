<%- include("partials/header") -%>
<div class="row justify-content-center">
  <div class="card">
    <div class="card-body">
      <form action="signup" method="post">
          <div class="form-group">
            <label for="usernameinput">Username</label>
            <input class="form-control" type="text" id="usernameinput" name="usernameinput">
          </div>
          <div class="form-group">
            <label for="passwordinput">Password</label>
            <input class="form-control" type="password" id="paswordinput" name="passwordinput">
          </div>
          <div class="form-group">
            <label for="verifypaswordinput">Verify Password</label>
            <input class="form-control" type="password" id="verifypaswordinput" name="verifypaswordinput">
          </div>
        <div class="row">
            <div class="col text-center">
              <button class="btn btn-primary" type="submit" name="button">Register</button>
            </div>
            <div class="col text-center">
              <a class="btn btn-danger" href="/home">Cancel</a>
            </div>
        </div>
      </form>
    </div>
  </div>
</div>
<%- include("partials/footer") -%>
